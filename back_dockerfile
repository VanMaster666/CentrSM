FROM python:3.9
WORKDIR /app
COPY Backend/app/. ./
RUN pip install --no-cache-dir --upgrade -r /app/requirements.txt
RUN apt-get update \
    && apt-get -y install libpq-dev gcc \
    && pip install psycopg2 \
    && pip install SQLAlchemy
CMD ["source", "bin/activate"]
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "5000"]
